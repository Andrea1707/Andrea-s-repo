<UserControl x:Class="Snake.Dati"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Snake"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Grid.ColumnSpan="13" Grid.RowSpan="9">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Background>
            <ImageBrush  ImageSource="pack://application:,,,/Resources/Immagine.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Inserisci il Nome :" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontWeight="Bold"/>
        <TextBox Name="tbx_name" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="120" />
        <Button Name="bt_invia" Content="Invia" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2" Height="40" Width="80"  FontWeight="Bold" Click="bt_invia_Click"/>
        <Button Name="bt_indietro" Content="Indietro" Grid.Column="0" Grid.Row="1" HorizontalAlignment ="Center" VerticalAlignment="Center" Height ="40" Width="80" FontWeight="Bold" Click="bt_indietro_Click" />
    </Grid>
</UserControl>
