<UserControl x:Class="iTunes_1._0.Song_item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iTunes_1._0"
             mc:Ignorable="d" Height="90" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image Name="image" Grid.Column="0"></Image>
        <Label Name="lb_title" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">Titile</Label>
        <Label Name="lb_artist" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Stretch">Artist</Label>
        <Label Name="lb_genere" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Stretch">Genere</Label>
        <Button Name="bt_play" Content="Play" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" Click="bt_play_Click" Width="40"/>
        <Button Name="bt_pause" Content="Pause" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="40" Click="Bt_pause_Click"/>
        <Button Name="bt_stop" Content="Stop" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="40" Click="Bt_stop_Click"/>
    </Grid>
</UserControl>
