<UserControl x:Class="iTunes_1._0.Add"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iTunes_1._0"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Button Name="bt_img_up" Content="Upload" VerticalAlignment="Center" HorizontalAlignment="Center" Width="75" Grid.Column="1" Click="bt_img_up_Click" />
        <Label Grid.Column="0" Content="Image" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Column="0" Content="Artist" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <Label Grid.Column="0"  Content="Title" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2"/>
        <Label Grid.Column="0" Content="Genere" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3"/>
        <Label Content="File audio" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" />
        <Button Name="bt_file_add" Content="Upload" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Width="75" Click="bt_file_add_Click"/>
       
        
        
        
        <Label Name="lb_image_path" Content="Path" Grid.Column="2" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <Label Name="lb_file_path" Content="Path" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <TextBox Name="tb_artist" Grid.Column="1" HorizontalAlignment="Center" Height="22" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="120"/>
        <TextBox Name="tb_title" Grid.Column="1" HorizontalAlignment="Center" Height="22" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="120"/>
        <TextBox Name="tb_genere" Grid.Column="1" HorizontalAlignment="Center" Height="22" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="120"/>


        <Button Name="bt_add" Content="Add song" Grid.Column="2" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" Click="bt_add_Click"/>




    </Grid>
</UserControl>
